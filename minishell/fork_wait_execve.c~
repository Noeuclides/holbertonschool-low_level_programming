#include <stdio.h>
#include <unistd.h>
#include <sys/wait.h>

int main(void)
{
	char *path_to_exec = "/bin/ls";
	char *flags = {"-l", "/tmp", NULL};
	int hijo;
	int i = 0, sw = 1;

	while (i < 5 && sw == 1)
	{
		hijo = fork();
		if (hijo == 0)
			execve(path_to_exec, flags, NULL);
		else
		{
			sw = 0;
			wait(NULL);
		}
		i++;
	}

	return (0);
}
